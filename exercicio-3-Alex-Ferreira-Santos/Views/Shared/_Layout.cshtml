@model usuario
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <a asp-action="Index"><h3 id="logo">Logo</h3></a>
        <div id="search-bar">
            <input type="text" name="pesquisa" id="pesquisa" placeholder="pesquisar...">
            <img src="~/images/magnifying-glass.png" alt="pesquisa" id="lupa">
        </div>
        <div class="icons">
            <a asp-action="Carrinho" id="car"><img src="~/images/shopping-cart.png" alt="carrinho"></a>
            <a asp-action="Curtidos" id="cur"><img src="~/images/heart.png" alt="favoritos"></a>
            @if(Context.Session.GetInt32("idUsuariousuario")==null){<img src="~/images/avatar.png" alt="usuario" id="usuario">}
            else{<a asp-action="Logout"><img src="~/images/logout.png" alt="logout" id="logout"></a> }   
        </div>
        <nav>
            <a href="~/Home/Produtos">novidades</a>
            <a href="~/Home/Produtos">masculino</a>
            <a href="~/Home/Produtos">feminino</a>
            <a href="~/Home/Produtos">infantil</a>
            <a href="~/Home/Produtos">calçados</a>
            @if(Context.Session.GetInt32("tipoUsuariousuario")==1){<a asp-action="menu" asp-controller="Produto">menu</a>}
        </nav>
        @if(Context.Session.GetInt32("idUsuariousuario")!=null){<span id="Logout">Olá <b>@Context.Session.GetString("nomeUsuariousuario")</b></span>}
    </header>

    <div class="container">
        <form method="POST" class="cadastro" id="cadastro">
            <img src="~/images/015-close.png" alt="fechar" id="fechar">
            <h3>Cadastro</h3>

            <p><label asp-for="email">E-mail</label></p>
            <p><input asp-for="email" type="email" id="e-mail" placeholder="Digite seu email" required></p>

            <p><label asp-for="senha">Senha</label></p>
            <p><input asp-for="senha" type="password" id="senha" placeholder="Digite sua senha" required></p>

            <p><input type="submit" name="login" value="entrar" id="login" class="button"></p>

            <p>Não tem uma conta? </p>

            <p><input type="button" value="Cadastrar" id="cadastroBtn" class="button"></p>
        </form>

        <form method="POST" id="newUser">
            <img src="~/images/left-arrow-key-1.png" alt="voltar" id="voltar">
            <h3>Novo usuário</h3>

            <p><label asp-for="nome">Nome*</label></p>
            <p><input asp-for="nome" name="nome" id="nome" placeholder="Digite seu nome" required></p>

            <p><label asp-for="email">E-mail*</label></p>
            <p><input asp-for="email" type="email" name="email" id="E-mail" placeholder="Digite seu email" required></p>

            <p><label asp-for="senha">Senha*</label></p>
            <p><input type="password" asp-for="senha" name="senha" id="Senha" placeholder="Digite sua senha" required></p>

            <p><label asp-for="nascimento">nascimento*</label></p>
            <p><input type="date" asp-for="nascimento" name="nascimento" id="nascimento" required></p>

            <p><label asp-for="telefone"> Telefone*</label></p>
            <p><input asp-for="telefone" name="telefone" id="telefone" placeholder="Digite seu número" required></p>

            <p><input type="submit" name="login" value="Confirmar" id="confirmar"></p>
        </form>

        <p id="viewBag">@ViewBag.mensagem</p>
            

        <main role="main" class="pb-3">     
            @RenderBody()
        </main>
    </div>

    <footer>
        <div id="novidades">
            <label for="novidades">Receba Novidades</label>
            <select name="interesse" id="interesse">
                <option value="">interesse</option>
                <option value="novidades">novidades</option>
                <option value="masculino">masculino</option>
                <option value="feminino">feminino</option>
                <option value="infantil">infantil</option>
                <option value="calçados">calçados</option>
            </select>
            <input type="email" name="email" id="email" placeholder="Digite seu email">
            <input type="submit" value="enviar" id="submit">
        </div>
        <div id="social-media">
            <h3>Siga a xxxx</h3>
            <img src="~/images/001-facebook.png" alt="facebook">
            <img src="~/images/013-twitter.png" alt="twitter">
            <img src="~/images/011-instagram.png" alt="instagram">
            <img src="~/images/010-linkedin.png" alt="linkedIn">
        </div>
        <p id="fale-conosco">Fale conosco</p>
        <p id="contato">contato@gmail.com</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
