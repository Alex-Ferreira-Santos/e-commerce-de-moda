@model ViewModel; 
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Produtos";
    int a = 1;
}
<link rel="stylesheet" href="~/css/_Produto2.css">
@foreach (Produto item in Model.listaProd)
{
    a++;
    <div class="produto">
        @if(a<10){
            <label for="Novo" id="novo">Novo!</label>
        }
        <img src="@item.foto" alt="Produto">
        @if(Context.Session.GetInt32("idUsuariousuario")!=null){
            <button alt="Curtir" class="icones curtir" id="curtir" value="@item.id"></button>
            <button alt="Carrinho" class="icones loja" id="carrinho" value="@item.id"></button>  
        }
        <p>@item.nome</p>
        @if(item.promocao!=0){
            <p>
                <label for="preço antigo" id="antigo"><del>R$<strong>@item.preco</strong></del></label>
                <label for="preço atual" id="atual">R$@item.promocao</label>
            </p>
        }
        @if(item.promocao==0){
            <p>R$<strong>@item.preco</strong></p>
        }     
        
    </div>
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/_Produto3.js"></script>
<script src="~/js/addprodutos.js"></script>