@model ViewModel; 
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Produtos";
    int a = 1;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/_Produto2.css">
@foreach (Produto item in Model.listaProduto)
{
    a++;
    <div class="produto position-relative d-inline-block">
        @if(a<10){
            <label for="Novo" id="novo" class="position-absolute p-2">Novo!</label>
        }
        <a id="link" href="@item.foto"><img src="@item.foto" class="ml-3 position-relative" alt="Produto"></a>
        @if(Context.Session.GetInt32("idUsuariousuario")!=null){
            <button alt="Curtir" class="icones curtir position-absolute border-0" id="curtir" value="@item.id"></button>
            <button alt="Carrinho" class="icones loja position-absolute border-0" id="carrinho" value="@item.id"></button>  
        }
        <p class="text-center m-0">@item.nome</p>
        @if(item.promocao!=0){
            <p class="text-center m-0">
                <label for="preço antigo" id="antigo"><del>R$<strong>@item.preco</strong></del></label>
                <label for="preço atual" class="m-0" id="atual">R$@item.promocao</label>
            </p>
        }
        @if(item.promocao==0){
            <p class="text-center m-0">R$<strong>@item.preco</strong></p>
        }     
        
    </div>
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/_Produto3.js"></script>
<script src="~/js/addprodutos.js"></script>

