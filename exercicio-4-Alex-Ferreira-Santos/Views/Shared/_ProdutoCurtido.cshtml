@model ViewModel; 
@{
    ViewData["Title"] = "Produtos";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/_Produto2.css">
@foreach (Curtidos item in Model.listaCurtidos)
{
    <div class="produto position-relative d-inline-block">
        <a id="link" href="@item.fotoProduto"><img src="@item.fotoProduto" class="ml-3 position-relative" alt="Produto"></a>
        <button alt="Curtir" class="icones curtir position-absolute border-0" id="curtir" value="@item.idCurtidos"></button>
        <button alt="Carrinho" class="icones loja position-absolute border-0" id="carrinho" value="@item.idProduto"></button>
        <p class="text-center m-0">@item.nomeProduto</p>
        @if(item.promocaoProduto!=0){
            <p class="text-center m-0">
                <label for="preço antigo" id="antigo"><del>R$<strong>@item.precoProduto</strong></del></label>
                <label for="preço atual" class="m-0" id="atual">R$@item.promocaoProduto</label>
            </p>
        }
        @if(item.promocaoProduto==0){
            <p class="text-center m-0">R$<strong>@item.precoProduto</strong></p>
        }     
        
    </div>
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/_Produto3.js"></script>
<script src="~/js/curtidos2.js"></script>